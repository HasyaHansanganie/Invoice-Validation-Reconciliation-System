{
    "openapi": "3.1.0",
    "info": {
        "title": "Invoice Validation & Reconciliation API",
        "description": "API to upload invoice files (CSV/PDF), validate them using SOAP, store them in AWS S3, and reconcile against purchase orders.",
        "version": "1.0.0"
    },
    "paths": {
        "/upload-invoice": {
            "post": {
                "summary": "Upload Invoice",
                "description": "Upload an invoice file (CSV or PDF), extract metadata automatically,\nvalidate the amount using SOAP, upload file to S3, and save everything to DB.",
                "operationId": "upload_invoice_upload_invoice_post",
                "requestBody": {
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "$ref": "#/components/schemas/Body_upload_invoice_upload_invoice_post"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Successful Response",
                        "content": {
                            "application/json": {
                                "schema": {}
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/HTTPValidationError"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/reconcile": {
            "get": {
                "summary": "Reconcile",
                "description": "Match invoices to purchase orders based on vendor and amount.\nReturn reconciliation results (Matched/Unmatched).",
                "operationId": "reconcile_reconcile_get",
                "responses": {
                    "200": {
                        "description": "Successful Response",
                        "content": {
                            "application/json": {
                                "schema": {}
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Body_upload_invoice_upload_invoice_post": {
                "properties": {
                    "file": {
                        "type": "string",
                        "format": "binary",
                        "title": "File"
                    }
                },
                "type": "object",
                "required": [
                    "file"
                ],
                "title": "Body_upload_invoice_upload_invoice_post"
            },
            "HTTPValidationError": {
                "properties": {
                    "detail": {
                        "items": {
                            "$ref": "#/components/schemas/ValidationError"
                        },
                        "type": "array",
                        "title": "Detail"
                    }
                },
                "type": "object",
                "title": "HTTPValidationError"
            },
            "ValidationError": {
                "properties": {
                    "loc": {
                        "items": {
                            "anyOf": [
                                {
                                    "type": "string"
                                },
                                {
                                    "type": "integer"
                                }
                            ]
                        },
                        "type": "array",
                        "title": "Location"
                    },
                    "msg": {
                        "type": "string",
                        "title": "Message"
                    },
                    "type": {
                        "type": "string",
                        "title": "Error Type"
                    }
                },
                "type": "object",
                "required": [
                    "loc",
                    "msg",
                    "type"
                ],
                "title": "ValidationError"
            }
        }
    }
}